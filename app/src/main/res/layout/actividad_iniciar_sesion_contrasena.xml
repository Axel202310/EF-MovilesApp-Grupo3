<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#303030"
    android:fitsSystemWindows="true">

    <!-- Encabezado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fondo_encabezado"
        android:padding="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/boton_atras"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icono_atras"
            android:contentDescription="Volver"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar sesi칩n"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escriba la contrase침a"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/campo_contrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contrase침a"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#BBBBBB"
            android:background="@android:color/transparent"
            android:layout_marginBottom="4dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Has olvidado tu contrase침a?"
            android:textColor="#B4633E"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp" />

        <Button
            android:id="@+id/boton_siguiente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:enabled="false"
            android:alpha="0.5"
            android:background="@drawable/boton_redondeado"
            app:backgroundTint="@null" />
    </LinearLayout>
</LinearLayout>
