<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_dark"
    tools:context=".InicioActivity">  <!-- Asegúrate que el context apunte a tu Activity correcta -->

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background_dark"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Android Compact - 14"
            app:navigationIcon="@drawable/ic_menu_24" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp"
        android:background="@color/card_background_dark"> <!-- Este es el fondo de la sección principal -->

        <!-- Sección Total -->
        <TextView
            android:id="@+id/textViewTotalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textColor="@color/text_secondary_dark"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/imageViewDropDown"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_drop_down_24"
            app:tint="@color/text_secondary_dark"
            app:layout_constraintStart_toEndOf="@id/textViewTotalLabel"
            app:layout_constraintBottom_toBottomOf="@id/textViewTotalLabel"
            app:layout_constraintTop_toTopOf="@id/textViewTotalLabel"
            android:layout_marginStart="4dp"
            android:contentDescription="Seleccionar cuenta"/>

        <TextView
            android:id="@+id/textViewTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3,250.00 S/."
            android:textColor="@color/text_primary_dark"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/textViewTotalLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp"/>

        <!-- Tabs Gastos / Ingresos -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayoutType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textViewTotalAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            app:tabTextColor="@color/text_secondary_dark"
            app:tabSelectedTextColor="@color/accent_orange"
            app:tabIndicatorColor="@color/accent_orange"
            app:tabIndicatorHeight="3dp"
            android:background="@color/card_background_dark">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GASTOS" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INGRESOS" />
        </com.google.android.material.tabs.TabLayout>

        <!-- Contenedor para la selección de periodo y el círculo -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/periodSelectionContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"

            app:layout_constraintTop_toBottomOf="@id/tabLayoutType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Tabs Día / Semana / Mes / Año -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayoutPeriod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:tabTextColor="@color/text_secondary_dark"
                app:tabSelectedTextColor="@color/accent_orange"
                app:tabIndicatorColor="@color/accent_orange"
                app:tabIndicatorHeight="2dp"
                app:tabMode="scrollable"
                android:background="@color/black">

                <com.google.android.material.tabs.TabItem android:text="Día" />
                <com.google.android.material.tabs.TabItem android:text="Semana" />
                <com.google.android.material.tabs.TabItem android:text="Mes" />
                <com.google.android.material.tabs.TabItem android:text="Año" />
            </com.google.android.material.tabs.TabLayout>

            <!-- Navegación de Fecha -->
            <ImageButton
                android:id="@+id/buttonPreviousDate"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_chevron_left_24"
                app:tint="@color/text_secondary_dark"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintTop_toBottomOf="@id/tabLayoutPeriod"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                android:contentDescription="Fecha anterior"/>

            <TextView
                android:id="@+id/textViewCurrentDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Hoy, 21 de Abril"
                android:textColor="@color/text_primary_dark"
                android:textSize="14sp"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="@id/buttonPreviousDate"
                app:layout_constraintBottom_toBottomOf="@id/buttonPreviousDate"
                app:layout_constraintStart_toEndOf="@id/buttonPreviousDate"
                app:layout_constraintEnd_toStartOf="@+id/buttonNextDate"/>

            <ImageButton
                android:id="@+id/buttonNextDate"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_chevron_left_24"
                android:rotation="180"
                app:tint="@color/text_secondary_dark"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintTop_toBottomOf="@id/tabLayoutPeriod"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:contentDescription="Fecha siguiente"/>

            <!-- Círculo "Dona" -->
            <FrameLayout
                android:id="@+id/donutContainer"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/textViewCurrentDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.3"
                android:layout_marginTop="24dp">

                <View
                    android:id="@+id/donutRing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_donut_ring" />

                <View
                    android:id="@+id/donutCenterBackground"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_circle_progress_background" />

                <TextView
                    android:id="@+id/textViewDonutCenterText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="No hubo\ngastos hoy"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="16sp"/>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        app:srcCompat="@drawable/ic_add_24"
        android:contentDescription="Agregar transacción"
        app:backgroundTint="@color/accent_orange"
        app:tint="@color/white"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>