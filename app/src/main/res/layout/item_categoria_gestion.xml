<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="12dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_categoria_icono"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/fondo_categoria_circular"
        android:padding="14dp"
        android:scaleType="centerInside"
        android:contentDescription="@string/descripcion_icono_categoria"
        tools:src="@drawable/ic_categoria_educacion"
        tools:backgroundTint="@color/color_cat_educacion"/>

    <TextView
        android:id="@+id/tv_categoria_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
