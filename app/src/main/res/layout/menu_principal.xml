<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#262624"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        android:background="#2C2C2E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnInicio"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:drawableLeft="@drawable/hogar"
                android:drawablePadding="0dp"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/btnCuenta"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Cuentas"
                android:drawableLeft="@drawable/cuenta"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/btnPerfil"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Perfil financiero"
                android:drawableLeft="@drawable/perfil_financiero"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/btnGrafico"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Gráficos"
                android:drawableLeft="@drawable/grafico"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/btnCategoria"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Categorías"
                android:drawableLeft="@drawable/categoria"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/btnPagos"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Pagos habituales"
                android:drawableLeft="@drawable/pagos_habituales"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/btnRecordatorio"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Recordatorios"
                android:drawableLeft="@drawable/recordatorio"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/btnAjuste"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Ajustes"
                android:drawableLeft="@drawable/configuracion"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>