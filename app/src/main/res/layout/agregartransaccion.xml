<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262624"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:alignmentMode="alignMargins"
        android:columnCount="4"
        android:padding="1dp"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@+id/textView8po"
        tools:layout_editor_absoluteX="0dp">

        <!-- Item 1 - Educación -->
        <LinearLayout
            android:id="@+id/contenedorCat1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/fondoCat1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:clipToPadding="false"
                android:clipChildren="false">

                <View
                    android:id="@+id/vistaFondo1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circulo_rojo"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/btncat1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/educacion"
                    android:gravity="center"
                    android:text="" />
            </FrameLayout>
            <TextView
                android:id="@+id/txtcat1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Educación"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Item 2 - Salud -->
        <LinearLayout
            android:id="@+id/contenedorCat2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/fondoCat2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:clipToPadding="false"
                android:clipChildren="false">

            <View
                android:id="@+id/vistaFondo2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circulo_verdeagua"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btncat2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:drawableTop="@drawable/alimento"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="" />
            </FrameLayout>

            <TextView
                android:id="@+id/txtCat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Salud"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Item 3 - Transporte -->
        <LinearLayout
            android:id="@+id/contenedorCat3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/fondoCat3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:clipToPadding="false"
                android:clipChildren="false">

            <View
                android:id="@+id/vistaFondo3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circulo_naranja"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btncat3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:drawableTop="@drawable/transporte"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="" />
            </FrameLayout>

            <TextView
                android:id="@+id/txtCat3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Transporte"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Item 4 - Hogar -->
        <LinearLayout
            android:id="@+id/contenedorCat4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fondoCat4"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:clipToPadding="false"
                android:clipChildren="false">

                <View
                    android:id="@+id/vistaFondo4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circulo_morado"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/btncat4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/hogar"
                    android:text=""
                    android:gravity="center"/>
            </FrameLayout>

            <TextView
                android:id="@+id/txtCat4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Hogar"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Item 5 - Regalos -->
        <LinearLayout
            android:id="@+id/contenedorCat5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/fondoCat5"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:clipToPadding="false"
                android:clipChildren="false">

            <View
                android:id="@+id/vistaFondo5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circulo_celeste"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/btncat5"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:drawableTop="@drawable/regalo"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="" />
            </FrameLayout>

            <TextView
                android:id="@+id/txtCat5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Regalos"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Item 6 - Alimentos -->
        <LinearLayout
            android:id="@+id/contenedorCat6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/fondoCat6"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:clipToPadding="false"
                android:clipChildren="false">

            <View
                android:id="@+id/vistaFondo6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circulo_rosado"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/btncat6"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/alimento"
                android:gravity="center"
                android:text="" />
            </FrameLayout>
            <TextView
                android:id="@+id/txtCat6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Alimentos"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Item 7 - Otros -->
        <LinearLayout
            android:id="@+id/contenedorCat7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/fondoCat7"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:clipToPadding="false"
                android:clipChildren="false">

            <View
                android:id="@+id/vistaFondo7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circulo_verde"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/btncat7"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:drawableTop="@drawable/alimento"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="" />
            </FrameLayout>
            <TextView
                android:id="@+id/txtCat7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Otros"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Item 8 - Crear -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:clipToPadding="false"
                android:clipChildren="false">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circulo_amarillo"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/btnMas"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:drawableTop="@drawable/alimento"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="" />
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Más"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </GridLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="294dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="48dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/txtCuent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <!-- Texto alineado a la izquierda -->
        <EditText
            android:id="@+id/txtMonto"
            android:layout_width="224dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="0"
            android:inputType="numberDecimal"
            android:paddingStart="16dp"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <!-- Texto alineado a la derecha -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:paddingEnd="16dp"
            android:text="PEN"
            android:textSize="20sp" />
    </FrameLayout>


    <TextView
        android:id="@+id/txtCuent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Cuenta"
        android:textColor="#B0B0B0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <TextView
        android:id="@+id/textView8po"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="16dp"
        android:text="Categorías"
        android:textColor="#B0B0B0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCuenta" />

    <TextView
        android:id="@+id/txtCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-7dp"
        android:layout_marginBottom="-10dp"
        android:text="Principal"
        android:textColor="#FF8C00"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView8po"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCuent" />

    <Button
        android:id="@+id/btnAñadir"
        android:layout_width="248dp"
        android:layout_height="54dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Añadir"
        android:textColor="#262624"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDate"
        app:layout_constraintVertical_bias="0.2" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginBottom="116dp"
        android:clickable="false"
        android:drawableEnd="@drawable/calendario"
        android:focusable="false"
        android:hint="Selecciona el dia"
        android:paddingBottom="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridCategorias"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="160dp"
        android:background="#2C2C2E"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- Solo esta parte fue modificada -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="start|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAtras"
                android:layout_width="44dp"
                android:layout_height="38dp"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/atras1"
                android:text="" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Añadir transacciones"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/selector_tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnGasto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="GASTOS"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"/>

                <View
                    android:id="@+id/underlineGasto"
                    android:layout_width="70dp"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:layout_marginTop="-8dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnIngreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="INGRESOS"
                    android:textSize="22sp"
                    android:textColor="@android:color/white"/>

                <View
                    android:id="@+id/underlineIngreso"
                    android:layout_width="70dp"
                    android:layout_height="3dp"
                    android:background="@android:color/white"
                    android:layout_marginTop="-8dp"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>