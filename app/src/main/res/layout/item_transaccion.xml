<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/icono_categoria"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icono_cartera" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/text_categoria_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comida"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_transaccion_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Almuerzo en restaurante"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_transaccion_monto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- S/ 50.00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"/>
</LinearLayout>