<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262624"
    tools:context=".MainActivity">


    <GridLayout
        android:id="@+id/gridCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="4"
        android:padding="1dp"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.096">

        <!-- Item 1 - Educación -->
        <LinearLayout
            android:id="@+id/contenedorCat1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fondoCat1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <View
                    android:id="@+id/vistaFondo1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/circulo_rojo" />

                <Button
                    android:id="@+id/btncat1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/educacion"
                    android:gravity="center"
                    android:text="" />
            </FrameLayout>

            <TextView
                android:id="@+id/txtcat1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Educación"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Item 2 - Salud -->
        <LinearLayout
            android:id="@+id/contenedorCat2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fondoCat2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <View
                    android:id="@+id/vistaFondo2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/circulo_verdeagua" />

                <Button
                    android:id="@+id/btncat2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/alimento"
                    android:gravity="center"
                    android:text="" />
            </FrameLayout>

            <TextView
                android:id="@+id/txtCat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Salud"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Item 3 - Transporte -->
        <LinearLayout
            android:id="@+id/contenedorCat3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fondoCat3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <View
                    android:id="@+id/vistaFondo3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/circulo_naranja" />

                <Button
                    android:id="@+id/btncat3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/transporte"
                    android:gravity="center"
                    android:text="" />
            </FrameLayout>

            <TextView
                android:id="@+id/txtCat3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Transporte"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Item 4 - Hogar -->
        <LinearLayout
            android:id="@+id/contenedorCat4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fondoCat4"
                android:layout_width="65dp"
                android:layout_height="65dp"
