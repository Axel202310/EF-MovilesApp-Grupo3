                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Item 7 - Otros -->
        <LinearLayout
            android:id="@+id/contenedorCat7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="15dp"
