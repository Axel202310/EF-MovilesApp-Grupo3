<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    tools:context=".FormularioPagoHabitualActivity">

    <!-- 1. Toolbar Estándar para el Encabezado -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_formulario_pago"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Nuevo Pago Habitual"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/atras1"
        app:navigationIconTint="@color/white"
        android:background="#303030"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 2. TabLayout para Gasto/Ingreso -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_tipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#303030"
        app:tabIndicatorColor="@color/accent_orange"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabSelectedTextColor="@color/accent_orange"
        app:tabTextColor="#8A8A8E"
        app:layout_constraintTop_toBottomOf="@id/toolbar_formulario_pago"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.tabs.TabItem
            android:text="Gasto" />
        <com.google.android.material.tabs.TabItem
            android:text="Ingreso" />
    </com.google.android.material.tabs.TabLayout>

    <!-- 3. Botón Principal de Acción -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_crear"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/button_orange"
        android:text="Crear Pago Habitual"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 4. Contenido Desplazable con todos los campos del formulario -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tab_layout_tipo"
        app:layout_constraintBottom_toTopOf="@id/btn_crear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/ll_contenido_formulario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Pago"
                android:textColor="#8A8A8E" />
            <EditText
                android:id="@+id/et_nombre_pago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:backgroundTint="@color/white"
                android:hint="Ej: Suscripción a Netflix"
                android:textColor="@color/white"
                android:textColorHint="#8A8A8E"
                android:inputType="textCapWords" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Monto"
                android:textColor="#8A8A8E"/>
            <EditText
                android:id="@+id/et_cantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:backgroundTint="@color/white"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="#8A8A8E"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Frecuencia"
                android:textColor="#8A8A8E" />
            <TextView
                android:id="@+id/tv_frecuencia_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:text="Mensual"
                android:textColor="@color/accent_orange"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Fecha de Inicio"
                android:textColor="#8A8A8E" />
            <TextView
                android:id="@+id/tv_start_date_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:hint="Seleccionar fecha"
                android:textColorHint="#AAAAAA"
                android:textColor="@color/accent_orange"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Cuenta"
                android:textColor="#8A8A8E" />
            <TextView
                android:id="@+id/tv_account_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:text="Seleccionar cuenta"
                android:textColor="@color/rojo_gasto"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Categoría"
                android:textColor="#8A8A8E" />
            <TextView
                android:id="@+id/tv_category_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:text="Seleccionar categoría"
                android:textColor="@color/rojo_gasto"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>