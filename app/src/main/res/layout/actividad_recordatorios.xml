<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_dark">

    <!-- Encabezado -->
    <LinearLayout
        android:id="@+id/layout_encabezado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/encabezado_dark"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu_24"
            android:contentDescription="@string/desc_menu"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_titulo_recordatorios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_recordatorios"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- Botón Crear -->
    <LinearLayout
        android:id="@+id/layout_crear_recordatorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/layout_encabezado"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_add_24"
            android:background="@drawable/bg_circle_orange"
            android:contentDescription="@string/desc_crear"
            android:padding="6dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_crear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crear"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- Título Recordatorios -->
    <TextView
        android:id="@+id/tv_recordatorios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Recordatorios!"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/layout_crear_recordatorio"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Switch Recordatorios -->
    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/switch_recordatorios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/desc_switch_recordatorios"
        android:showText="false"
        android:minHeight="48dp"
        android:minWidth="64dp"
        app:layout_constraintTop_toBottomOf="@id/layout_crear_recordatorio"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
