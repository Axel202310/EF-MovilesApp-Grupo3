<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#303030"
    android:padding="24dp">

    <TextView
        android:id="@+id/texto_bienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/texto_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esta es tu nueva aplicaciÃ³n para gestionar tus gastos personales."
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="35dp" />


    <ImageView
        android:id="@+id/imagen_cartera"
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:src="@drawable/icono_cartera"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/boton_comenzar"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/boton_redondeado"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Comenzar"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        android:textStyle="bold"
        app:backgroundTint="@null" />

</LinearLayout>
