<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262624"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridCategorias1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="22dp"
        android:alignmentMode="alignMargins"
        android:columnCount="4"
        android:padding="16dp"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toTopOf="@+id/etDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8po">

        <!-- Item 1 - Educación -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2400"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:drawableTop="@drawable/educacion"
                android:gravity="center"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Educación"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Item 2 - Salud -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2600"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:drawableTop="@drawable/alimento"
                android:gravity="center"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Salud"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Item 3 - Transporte -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2500"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:drawableTop="@drawable/transporte"
                android:gravity="center"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Transporte"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Item 4 - Hogar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2300"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:drawableTop="@drawable/hogar"
                android:gravity="center"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Hogar"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Item 5 - Regalos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1800"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:drawableTop="@drawable/regalo"
                android:gravity="center"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Regalos"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Item 6 - Alimentos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1700"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:drawableTop="@drawable/alimento"
                android:gravity="center"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Alimentos"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Item 7 - Otros -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2100"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:drawableTop="@drawable/alimento"
                android:gravity="center"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Otros"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Item 8 - Crear -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1300"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/mas"
                android:gravity="center"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Crear"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </GridLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="294dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="48dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/textView6llñ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <!-- Texto alineado a la izquierda -->
        <EditText
            android:id="@+id/edittext4"
            android:layout_width="224dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:hint="0"
            android:inputType="numberDecimal"
            android:paddingStart="16dp"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <!-- Texto alineado a la derecha -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:paddingEnd="16dp"
            android:text="PEN"
            android:textSize="20sp" />
    </FrameLayout>


    <TextView
        android:id="@+id/textView6llñ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Cuenta"
        android:textColor="#B0B0B0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <TextView
        android:id="@+id/textView8po"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="11dp"
        android:text="Categorías"
        android:textColor="#B0B0B0"
        app:layout_constraintBottom_toTopOf="@+id/gridCategorias1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7hhhh34545" />

    <TextView
        android:id="@+id/textView7hhhh34545"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:layout_marginBottom="-10dp"
        android:text="Principal"
        android:textColor="#FF8C00"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView8po"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6llñ" />

    <Button
        android:id="@+id/btnAñadir"
        android:layout_width="224dp"
        android:layout_height="45dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Añadir"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDate"
        app:layout_constraintVertical_bias="0.145" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_marginBottom="116dp"
        android:clickable="false"
        android:drawableEnd="@drawable/calendario"
        android:focusable="false"
        android:hint="Selecciona el dia"
        android:paddingBottom="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8po"
        app:layout_constraintVertical_bias="0.74" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#2C2C2E"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button000"
                android:layout_width="44dp"
                android:layout_height="38dp"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/atras1"
                android:text="" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Añadir categoría"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Solo esta parte fue modificada -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="INGRESOS"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="GASTOS"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>