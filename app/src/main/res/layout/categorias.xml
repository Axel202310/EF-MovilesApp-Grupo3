<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262624"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="395dp"
        android:layout_height="558dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <GridLayout
            android:id="@+id/gridCategorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:padding="1dp"
            android:useDefaultMargins="true">

            <!-- Item 1 - Educación -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button24"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    android:drawableTop="@drawable/educacion"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Educación"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Item 2 - Salud -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button26"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    android:drawableTop="@drawable/alimento"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Salud"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Item 3 - Transporte -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button25"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    android:drawableTop="@drawable/transporte"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Transporte"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Item 4 - Hogar -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button23"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    android:drawableTop="@drawable/hogar"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Hogar"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Item 5 - Regalos -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button18"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    android:drawableTop="@drawable/regalo"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Regalos"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Item 6 - Alimentos -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button17"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    android:drawableTop="@drawable/alimento"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Alimentos"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Item 7 - Otros -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button21"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:backgroundTint="@android:color/holo_orange_dark"
                    android:drawableTop="@drawable/alimento"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Otros"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Item 8 - Crear -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button13"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/mas"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Crear"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </GridLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#2C2C2E"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button"
            android:layout_width="44dp"
            android:layout_height="38dp"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/atras1"
            android:text="" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Añadir categoría"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>