<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262624"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.076">

        <GridLayout
            android:id="@+id/gridCategorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:padding="1dp"
            android:useDefaultMargins="true"
            app:layout_constraintTop_toBottomOf="@+id/textView8po"
            tools:layout_editor_absoluteX="0dp">

            <!-- Item 1 - Educación -->
            <LinearLayout
                android:id="@+id/contenedorCat1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fondoCat1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <View
                        android:id="@+id/vistaFondo1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/circulo_rojo" />

                    <Button
                        android:id="@+id/btncat1"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@android:color/transparent"
                        android:drawableTop="@drawable/educacion"
                        android:gravity="center"
                        android:text="" />
                </FrameLayout>

                <TextView
                    android:id="@+id/txtCat1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Educación"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Item 2 - Salud -->
            <LinearLayout
                android:id="@+id/contenedorCat2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fondoCat2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <View
                        android:id="@+id/vistaFondo2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/circulo_verdeagua" />

                    <Button
                        android:id="@+id/btncat2"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@android:color/transparent"
                        android:drawableTop="@drawable/alimento"
                        android:gravity="center"
                        android:text="" />
                </FrameLayout>

                <TextView
                    android:id="@+id/txtCat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Salud"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Item 3 - Transporte -->
            <LinearLayout
                android:id="@+id/contenedorCat3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fondoCat3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <View
                        android:id="@+id/vistaFondo3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/circulo_naranja" />

                    <Button
                        android:id="@+id/btncat3"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@android:color/transparent"
                        android:drawableTop="@drawable/transporte"
                        android:gravity="center"
                        android:text="" />
                </FrameLayout>

                <TextView
                    android:id="@+id/txtCat3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Transporte"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Item 4 - Hogar -->
            <LinearLayout
                android:id="@+id/contenedorCat4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fondoCat4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <View
                        android:id="@+id/vistaFondo4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/circulo_morado" />

                    <Button
                        android:id="@+id/btncat4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:drawableTop="@drawable/hogar"
                        android:gravity="center"
                        android:text="" />
                </FrameLayout>

                <TextView
                    android:id="@+id/txtCat4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Hogar"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Item 5 - Regalos -->
            <LinearLayout
                android:id="@+id/contenedorCat5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fondoCat5"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <View
                        android:id="@+id/vistaFondo5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/circulo_celeste" />

                    <Button
                        android:id="@+id/btncat5"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@android:color/transparent"
                        android:drawableTop="@drawable/regalo"
                        android:gravity="center"
                        android:text="" />
                </FrameLayout>

                <TextView
                    android:id="@+id/txtCat5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Regalos"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Item 6 - Alimentos -->
            <LinearLayout
                android:id="@+id/contenedorCat6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fondoCat6"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <View
                        android:id="@+id/vistaFondo6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
