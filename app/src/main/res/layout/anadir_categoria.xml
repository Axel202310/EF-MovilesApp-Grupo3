                    <Button
                        android:id="@+id/btncat6"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@android:color/transparent"
                        android:drawableTop="@drawable/alimento"
                        android:gravity="center"
                        android:text="" />
                </FrameLayout>

                <TextView
                    android:id="@+id/txtCat6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Alimentos"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Item 7 - Otros -->
            <LinearLayout
                android:id="@+id/contenedorCat7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fondoCat7"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <View
                        android:id="@+id/vistaFondo7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/circulo_verde" />

                    <Button
                        android:id="@+id/btncat7"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@android:color/transparent"
                        android:drawableTop="@drawable/alimento"
                        android:gravity="center"
                        android:text="" />
                </FrameLayout>

                <TextView
                    android:id="@+id/txtCat7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Otros"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Item 8 - Crear -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:clipChildren="false"
                    android:clipToPadding="false">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/circulo_amarillo" />

                    <Button
                        android:id="@+id/btnCrear"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:background="@android:color/transparent"
                        android:drawableTop="@drawable/alimento"
                        android:gravity="center"
                        android:text="" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Crear"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </GridLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="408dp"
        android:layout_height="110dp"
        android:background="#2C2C2E"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnAtras1"
            android:layout_width="44dp"
            android:layout_height="38dp"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/atras1"
            android:paddingTop="20dp"
            android:text="" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:paddingTop="20dp"
            android:text="Añadir categoría"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>