<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#2C2C2C"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Icono de la Categoría -->
        <ImageView
            android:id="@+id/iv_pago_icono"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_default_category"
            android:background="@drawable/circulo_gris"
            android:padding="12dp"
            app:tint="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Icono de la categoría del pago" />

        <!-- Nombre del Pago y Cuenta/Categoría -->
        <TextView
            android:id="@+id/tv_pago_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/iv_pago_icono"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_pago_monto"
            tools:text="Suscripción a Netflix" />

        <TextView
            android:id="@+id/tv_pago_cuenta_categoria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tv_pago_nombre"
            app:layout_constraintTop_toBottomOf="@id/tv_pago_nombre"
            app:layout_constraintEnd_toEndOf="@id/tv_pago_nombre"
            tools:text="Principal • Entretenimiento" />

        <!-- Monto del Pago -->
        <TextView
            android:id="@+id/tv_pago_monto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/rojo_gasto"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_pago_nombre"
            tools:text="- S/ 45.90" />

        <!-- Línea divisora -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#424242"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/iv_pago_icono"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Frecuencia y Próximo Pago -->
        <TextView
            android:id="@+id/tv_frecuencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Mensual" />

        <TextView
            android:id="@+id/tv_proximo_pago_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/tv_frecuencia"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Próximo: 25 de Jul, 2025" />

        <!-- Botón de Eliminar -->
        <ImageButton
            android:id="@+id/btn_eliminar_pago"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#808080"
            android:contentDescription="Eliminar pago habitual"
            app:layout_constraintTop_toBottomOf="@id/tv_proximo_pago_fecha"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>