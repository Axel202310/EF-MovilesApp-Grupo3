<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    tools:context=".PerfilFinancieroActivity">

    <!-- Barra de herramientas superior (Toolbar) -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#3A3A3A"
            app:navigationIcon="@drawable/ic_menu"
            app:title="Perfil Financiero" />

    </com.google.android.material.appbar.AppBarLayout>


    <!-- Contenido principal -->
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout"
        app:layout_constraintBottom_toTopOf="@id/button_siguiente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icono de perfil no disponible -->
        <ImageView
            android:id="@+id/image_view_profile_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="Icono de perfil no disponible"
            android:src="@drawable/ic_profile_unknown_placeholder"
            tools:src="@drawable/ic_profile_unknown_placeholder" />

        <!-- Título principal -->
        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="Tu perfil financiero aún no esta disponible"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Texto de descripción -->
        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:text="Necesitamos conocer más sobre tus habitos financieros. Registra tus ingresos y gastos por unos días y te mostraremos tu perfil personalizado."
            android:textColor="#E0E0E0"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"/>

        <!-- Etiqueta de Progreso -->
        <TextView
            android:id="@+id/text_view_progress_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Progreso"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Estado del progreso -->
        <TextView
            android:id="@+id/text_view_progress_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aún no hay datos suficientes"
            android:textColor="#BDBDBD"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Botón inferior -->
    <Button
        android:id="@+id/button_siguiente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_rounded_orange"
        app:backgroundTint="@null"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Siguiente"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>